<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <div class="edit-container">
    <h2 class="title mt-5">Edit Post</h2><hr>
    <form class="edit-post-form">
      <div class="edit-content">
        <div>
            <label for="post-title"><strong>Post Title:</strong></label>
          <input class="input" id="post-title" name="post-title" type="text" value="{{post.title}}" /><br><br>
        </div>
        <div>
            <label for="post-content"><strong>Post Content:</strong></label>
          <input class="textarea" id='post-content' name="post-content" type="text" value="{{post.post_content}}" />
        </div><br><br><br>
        </div>
        <div id="post-info" class="is-pulled-right">
          created by you on {{format_date post.created_at}}
          |
          <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
      </div>
      <button type="submit" id="submit-edit-btn" class="button is-success">Save Post</button>
      <button type="button" id="'delete-post-btn" class="button is-danger delete-post-btn">Delete Post</button>
    </form>
  
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>